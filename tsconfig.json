{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "paths": {
            "~/*": ["./src/*"],
            "@/*": ["./src/*"]
        },
        "types": ["vite/client", "vite-plugin-pages/client"],
        "jsx": "preserve"
    },
    "include": ["src/**/*"]
}
